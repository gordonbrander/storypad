.artboard-header
  background #252525
  color #fff

.artboard-header > .in
  padding 24px 0 12px

.artboard-header .title
  font-size 14px
  line-height 24px
  margin-bottom 12px

.artboard-main
  padding 48px 0

.artboard-pagination
  background #444
  border-radius 5px
  height 48px
  overflow hidden
  position absolute
  width 96px
  top 12px
  right 0

.artboard-pagination > .next,
.artboard-pagination > .prev
  display block
  width 48px
  height 48px
  position absolute
  text-indent -32000px

.artboard-pagination > .next
  background url(sprite-y.png) 0 0 no-repeat
  right 0

.artboard-pagination > .prev
  background url(sprite-y.png) 0 -100px no-repeat

.artboard-pagination > .next:hover,
.artboard-pagination > .prev:hover
  background-color #666